<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/pregunta_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:cardBackgroundColor="@color/materia_geografia">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/pregunta_materia_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pregunta_text"
                    app:layout_constraintRight_toLeftOf="@id/pregunta_text"
                    tools:srcCompat="@drawable/materia_tecnologia_icon"
                    android:tint="@color/colorAccent"/>

                <TextView
                    android:id="@+id/pregunta_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"

                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/secondary_text_light"
                    tools:text="Quin general cartaginès va envaair Italia durant la 2a Guerra Púnica, bals alad fins la seva derrota definitiva l'any 2001 a.c.?"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/pregunta_materia_icon"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/resposta_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    tools:text="blablaabjadsfasasdfadsfdsfdfadfdfahsfdsdakjfdkfjdaskfjadskfjadsfkjasdkfjasdkfjadskfjalkdjf"
                    app:layout_constraintLeft_toLeftOf="@id/pregunta_text"
                    app:layout_constraintTop_toBottomOf="@id/pregunta_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ans_icon"/>


                <ImageView
                    android:id="@+id/ans_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/right_icon"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    android:visibility="visible"/>

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/resposta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="ans_icon, resposta_text"
                    android:visibility="gone"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>