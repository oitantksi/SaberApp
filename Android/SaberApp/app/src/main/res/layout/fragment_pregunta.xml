<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="pregunta"
            type="omega.isaacbenito.saberapp.data.entities.Pregunta" />

        <variable
            name="viewModel"
            type="omega.isaacbenito.saberapp.jocpreguntes.model.JocPreguntesVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/pregunta_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:cardBackgroundColor="@color/materia_geografia">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/pregunta_materia_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="150dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/materia_tecnologia_icon_carved" />

                <TextView
                    android:id="@+id/pregunta_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@{pregunta.question}"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/secondary_text_light"
                    tools:text="Quin general cartaginès va envair Italia durant la 2a Guerra Púnica, fins la seva derrota definitiva l'any 201 a.c.?"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pregunta_cardView">

            <androidx.cardview.widget.CardView
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:minHeight="50dp"
                app:layout_constraintBottom_toTopOf="@id/answer2"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside"
                tools:backgroundTint="@color/colorAccent"
                tools:layout_height="100dp"
                android:padding="10dp"
                android:onClick="@{() -> viewModel.onPreguntaAnswered(1)}">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/answer1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/answer1_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@{pregunta.ans1}"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/secondary_text_light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/answer1_wrong"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/wrong_icon"
                        android:layout_margin="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/answer1_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/right_icon"
                        android:layout_margin="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="invisible"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:minHeight="50dp"
                app:layout_constraintBottom_toTopOf="@id/answer3"
                app:layout_constraintTop_toBottomOf="@id/answer1"
                tools:backgroundTint="@color/colorAccent"
                tools:layout_height="100dp"
                android:padding="10dp"
                android:onClick="@{() -> viewModel.onPreguntaAnswered(2)}">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/answer2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/answer2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@{pregunta.ans2}"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/secondary_text_light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/answer2_wrong"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/wrong_icon"
                        android:layout_margin="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/answer2_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/right_icon"
                        android:layout_margin="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="invisible"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:minHeight="50dp"
                app:layout_constraintBottom_toTopOf="@id/answer4"
                app:layout_constraintTop_toBottomOf="@id/answer2"
                tools:backgroundTint="@color/colorAccent"
                tools:layout_height="100dp"
                android:padding="10dp"
                android:onClick="@{() -> viewModel.onPreguntaAnswered(3)}">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/answer3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/answer3_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@{pregunta.ans3}"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/secondary_text_light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/answer3_wrong"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/wrong_icon"
                        android:layout_margin="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/answer3_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/right_icon"
                        android:layout_margin="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="invisible"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:minHeight="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/answer3"
                tools:backgroundTint="@color/colorAccent"
                tools:layout_height="100dp"
                android:padding="10dp"
                android:onClick="@{() -> viewModel.onPreguntaAnswered(4)}">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/answer4_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/answer4_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@{pregunta.ans4}"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/secondary_text_light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/answer4_wrong"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/wrong_icon"
                        android:layout_margin="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/answer4_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/right_icon"
                        android:layout_margin="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="invisible"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>