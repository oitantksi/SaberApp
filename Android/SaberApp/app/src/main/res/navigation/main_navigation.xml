<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/userMainFragment">


    <fragment
        android:id="@+id/userProfileFragment"
        android:name="omega.isaacbenito.saberapp.user.ui.UserProfileFragment"
        android:label="@string/user_profile"/>
    <fragment
        android:id="@+id/userMainFragment"
        android:name="omega.isaacbenito.saberapp.user.ui.UserMainFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_userMainFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_userMainFragment_to_preguntaFragment"
            app:destination="@id/preguntaFragment" />
        <action
            android:id="@+id/action_userMainFragment_to_preguntesFragment"
            app:destination="@id/preguntesFragment" />
        <action
            android:id="@+id/action_userMainFragment_to_scoreFragment"
            app:destination="@id/scoreFragment" />
    </fragment>
    <fragment
        android:id="@+id/preguntaFragment"
        android:name="omega.isaacbenito.saberapp.jocpreguntes.ui.PreguntaFragment"
        android:label="PreguntaFragment" />
    <fragment
        android:id="@+id/preguntesFragment"
        android:name="omega.isaacbenito.saberapp.jocpreguntes.ui.PreguntesFragment"
        android:label="PreguntesFragment" >
        <action
            android:id="@+id/action_preguntesFragment_to_preguntaFragment"
            app:destination="@id/preguntaFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="omega.isaacbenito.saberapp.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="omega.isaacbenito.saberapp.ui.AboutFragment"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/scoreFragment"
        android:name="omega.isaacbenito.saberapp.jocpreguntes.ui.ScoreFragment"
        android:label="ScoreFragment" />
</navigation>